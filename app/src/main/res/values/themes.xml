<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Health" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cyan_a200</item>
        <item name="colorPrimaryVariant">@color/cyan_a700</item>
        <item name="colorOnPrimary">@color/white_smoke</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black_shade</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="TextSizeToolbar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:letterSpacing">0.05</item>
    </style>
    <style name="CollapsedAppBar" parent="@android:style/TextAppearance">
        <item name="android:textSize">32sp</item>
    </style>
</resources>